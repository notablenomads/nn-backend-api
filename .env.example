# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_PREFIX=v1
ENABLE_SWAGGER=false

# CORS Configuration
CORS_ENABLED_DOMAINS=localhost:3000,localhost:8080
CORS_RESTRICT=true
TRUSTED_PROXIES=

# JWT Authentication
# Generate strong secrets using: openssl rand -base64 32
JWT_SECRET=change_this_to_a_secure_secret
JWT_REFRESH_SECRET=change_this_to_another_secure_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_CLOCK_TOLERANCE=30
JWT_ISSUER=notablenomads

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
SECURITY_HELMET_ENABLED=true
COOKIE_SECURE=false
MAX_PAYLOAD_SIZE=10mb

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=change_this_to_secure_password
DATABASE_NAME=notablenomads
DATABASE_SCHEMA=public

# AWS Configuration (Optional - for email service)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Email Configuration
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_TO_ADDRESS=contact@example.com

# AI Configuration (Optional - for chat service)
GEMINI_API_KEY=your_gemini_api_key_here

# Monitoring Configuration (Optional)
SENTRY_DSN=your_sentry_dsn_here
MONITORING_MEMORY_THRESHOLD_MS=1000

# Encryption (Required for sensitive data)
# Generate a key using: openssl rand -hex 32
ENCRYPTION_KEY=change_this_to_a_secure_encryption_key