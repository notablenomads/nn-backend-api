{
  "info": {
    "name": "Notable Nomads API",
    "description": "Complete API collection for Notable Nomads backend services",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "description": "Authentication and authorization endpoints",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{$randomEmail}}\",\n  \"password\": \"{{$randomPassword}}\"\n}"
            },
            "description": "Register a new user account"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Parse the response",
                  "const response = pm.response.json();",
                  "",
                  "console.log('Response:', response);",
                  "",
                  "// Check if the request was successful",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// Validate response structure",
                  "pm.test('Response has required tokens', function () {",
                  "    pm.expect(response).to.be.an('object');",
                  "    pm.expect(response.data).to.be.an('object');",
                  "    pm.expect(response.data.accessToken).to.be.a('string');",
                  "    pm.expect(response.data.refreshToken).to.be.a('string');",
                  "});",
                  "",
                  "// Store tokens in environment variables if present",
                  "if (response.data && response.data.accessToken) {",
                  "    pm.environment.set('accessToken', response.data.accessToken);",
                  "    console.log('Access token updated');",
                  "}",
                  "",
                  "if (response.data && response.data.refreshToken) {",
                  "    pm.environment.set('refreshToken', response.data.refreshToken);",
                  "    console.log('Refresh token updated');",
                  "}",
                  "",
                  "// Log success message",
                  "if (response.data && response.data.accessToken && response.data.refreshToken) {",
                  "    console.log('Authentication successful - Tokens updated');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"{{userPassword}}\"\n}"
            },
            "description": "Login with email and password"
          }
        },
        {
          "name": "Refresh Tokens",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.accessToken) {",
                  "    pm.environment.set('accessToken', response.accessToken);",
                  "}",
                  "if (response.refreshToken) {",
                  "    pm.environment.set('refreshToken', response.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "description": "Refresh access token using refresh token"
          }
        }
      ]
    },
    {
      "name": "Leads",
      "description": "Project leads management endpoints",
      "item": [
        {
          "name": "Submit Lead",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/leads",
              "host": ["{{base_url}}"],
              "path": ["leads"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"services\": [\"WEB_DEVELOPMENT\"],\n  \"projectType\": \"NEW\",\n  \"projectDescription\": \"New e-commerce website\",\n  \"targetAudience\": \"B2C\",\n  \"industry\": \"RETAIL\",\n  \"hasCompetitors\": true,\n  \"competitorUrls\": [\"https://example.com\"],\n  \"hasExistingBrand\": false,\n  \"designStyle\": \"MODERN\",\n  \"timeline\": \"1_3_MONTHS\",\n  \"budget\": \"10K_25K\",\n  \"name\": \"John Doe\",\n  \"email\": \"{{$randomEmail}}\",\n  \"company\": \"Example Inc\",\n  \"preferredContactMethod\": \"EMAIL\",\n  \"wantsConsultation\": true,\n  \"additionalNotes\": \"Looking forward to discussing the project\"\n}"
            },
            "description": "Submit a new project lead"
          }
        },
        {
          "name": "Get All Leads",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{accessToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/leads",
              "host": ["{{base_url}}"],
              "path": ["leads"]
            },
            "description": "Get all project leads"
          }
        },
        {
          "name": "Get Lead By ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{accessToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/leads/:id",
              "host": ["{{base_url}}"],
              "path": ["leads", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "Lead ID"
                }
              ]
            },
            "description": "Get a specific lead by ID (requires authentication)"
          }
        },
        {
          "name": "Get Form Options",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/leads/options",
              "host": ["{{base_url}}"],
              "path": ["leads", "options"]
            },
            "description": "Get available options for the lead form"
          }
        }
      ]
    },
    {
      "name": "Blog",
      "description": "Blog posts management endpoints",
      "item": [
        {
          "name": "Get Blog Posts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/blog?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["blog"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Number of posts per page"
                }
              ]
            },
            "description": "Get paginated blog posts"
          }
        }
      ]
    },
    {
      "name": "Email",
      "description": "Email communication endpoints",
      "item": [
        {
          "name": "Submit Contact Form",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/email/contact",
              "host": ["{{base_url}}"],
              "path": ["email", "contact"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{$randomFullName}}\",\n  \"email\": \"{{$randomEmail}}\",\n  \"message\": \"Hello, I'd like to get in touch regarding your services.\"\n}"
            },
            "description": "Submit a contact form message"
          }
        }
      ]
    }
  ]
}
